            <SolidColorBrush x:Key="BrushLoadingNonOpaque" Color="#0a0a0a"/>
            <SolidColorBrush x:Key="BrushRowAlternate1" Color="#AA2a2c2a" />
            <SolidColorBrush x:Key="BrushRowAlternate2" Color="#111111" />
            <SolidColorBrush x:Key="BrushDetailsGeneralBorder" Color="#151515" />
            <SolidColorBrush x:Key="BrushDetailsRelatedBackground" Color="#1E1E1E" />
            <SolidColorBrush x:Key="BrushDetailsBackground" Color="#1d1d1d" />
            <SolidColorBrush x:Key="BrushDetailsUpperBackground" Color="#1a1a1a" />
            <SolidColorBrush x:Key="BrushDetailsMoreButton" Color="#404040" />
            <SolidColorBrush x:Key="BrushPivotInnerHeaderBarBackground" Color="#252525" />
            <SolidColorBrush x:Key="BrushSplitter" Color="#151515" />
            <SolidColorBrush x:Key="BrushHamburgerMenuButtonsBorder" Color="#e6e6e6" />
            <SolidColorBrush x:Key="BrushHamburgerSplitter" Color="#303030" />
            <SolidColorBrush x:Key="BrushHamburgerSplitterBorder" Color="#606060" />
            <SolidColorBrush x:Key="BrushAppBarInner" Color="#a7353535" />
            <SolidColorBrush x:Key="BrushHamburgerDropdownBackground" Color="#151515" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>